<%= error_messages_for :equipment %>
<% form_for @equipment, :url => equipments_url do |f| %>
  <p>
    <%= f.label :created_at, "Created at" %>
    <%= f.text_field :created_at, {:class  => 'date'} %>
  </p>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :code %><br />
    <%= f.text_field :code %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </p>
  <p>
    <%= f.label :note %><br />
    <%= f.text_area :note %>
  </p>
  <p>
    <%= f.label :maintenance_periodicity_in_months %><br />
    <%= f.text_field :maintenance_periodicity_in_months %>
  </p>
  <p><%= f.submit "Submit" %></p>
<% end %>
