<%= error_messages_for :user %>
<% form_for @user do |f| %>
  <p>
    <%= f.label :first_name %>
    <%= f.text_field :first_name, :size => 15 %>
    &nbsp;&nbsp;
    <%= f.label :last_name %>
    <%= f.text_field :last_name, :size => 15 %>
  </p>
  <p>
    <%= f.label :email %>
    <%= f.text_field :email, :size => 25  %>
  </p>
  <p>
      <%= f.label :password %>
      <%= f.password_field :password %>
  </p>
  <p>
    <%= f.label :password_confirmation, 'Confirm' %>
    <%= f.password_field :password_confirmation %>
  </p>
  <p>
    <%= f.label :role %>
    <%= f.select :role, User::ROLES %>
  </p>

  <p>
    <%= f.label :phone %>
    <%= f.text_field :phone %>
  </p>

  <p>
    <%= f.label :address %>
    <%= f.text_area :address, :size => '30x4' %>
  </p>
  <p><%= f.submit "Submit" %></p>
<% end %>
