<%= error_messages_for :user %>
<% form_for @user do |f| %>

  <% if current_user %>
  <p>
    <%= f.label :first_name %>
    <%= f.text_field :first_name, :size => 15 %>
  </p>
  <p>  
    <%= f.label :last_name %>
    <%= f.text_field :last_name, :size => 15 %>
  </p>
  <% end %>
  
  <% administrator_area current_user  do %>
  <p>
    <%= f.label :role %>
    <%= f.select :role, User::ROLES %>
  </p>
  <% end %>
  
  <p>
    <%= f.label :email %>
    <%= f.text_field :email, :size => 25  %>
  </p>
  <% if current_user %>
    <p>
      <%= f.label :phone %>
      <%= f.text_field :phone %>
    </p>
  <% end %>
  <p>
    <%= f.label :password %>
    <%= f.password_field :password, :size => 20 %>
  </p>
  <p>
    <%= f.label :password_confirmation, 'Confirm' %>
    <%= f.password_field :password_confirmation, :size => 20 %>
  </p>
    
  <% if current_user.not_technician? %>
  <p>
    <%= f.label :address %>
    <%= f.text_area :address, :size => '30x4' %>
  </p>
  <% end %>
  <p><%= f.submit "Submit" %></p>
<% end %>
